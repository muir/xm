var ExampleMetadataLockedZZZ = xopconst.Make{Key: "l-zzz", Locked: true, Namespace: "test"}.ZZZAttribute()
var ExampleMetadataMultipleZZZ = xopconst.Make{Key: "m-zzz", Multiple: true, Namespace: "test"}.ZZZAttribute()
var ExampleMetadataDistinctZZZ = xopconst.Make{Key: "d-zzz", Multiple: true, Distinct: true, Namespace: "test"}.ZZZAttribute()
