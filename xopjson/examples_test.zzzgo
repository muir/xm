package xopjson_test

import "github.com/muir/xop-go/xopconst"

type AnyObject struct {
	I int
	S string
	A []string
	P *AnyObject
}

var ExampleMetadataSingleAny = xopconst.Make{Key: "s-any", Namespace: "test"}.AnyAttribute(AnyObject{})
var ExampleMetadataLockedAny = xopconst.Make{Key: "l-any", Locked: true, Namespace: "test"}.AnyAttribute(AnyObject{})
var ExampleMetadataMultipleAny = xopconst.Make{Key: "m-any", Multiple: true, Namespace: "test"}.AnyAttribute(AnyObject{})
var ExampleMetadataDistinctAny = xopconst.Make{Key: "d-any", Multiple: true, Distinct: true, Namespace: "test"}.AnyAttribute(AnyObject{})

var ExampleMetadataSingleEnum = xopconst.Make{Key: "s-enum", Namespace: "test"}.EmbeddedEnumAttribute()
var ExampleMetadataLockedEnum = xopconst.Make{Key: "l-enum", Locked: true, Namespace: "test"}.EmbeddedEnumAttribute()
var ExampleMetadataMultipleEnum = xopconst.Make{Key: "m-enum", Multiple: true, Namespace: "test"}.EmbeddedEnumAttribute()
var ExampleMetadataDistinctEnum = xopconst.Make{Key: "d-enum", Multiple: true, Distinct: true, Namespace: "test"}.EmbeddedEnumAttribute()

var (
	SingleEnumOne   = ExampleMetadataSingleEnum.Iota("one")
	SingleEnumTwo   = ExampleMetadataSingleEnum.Iota("two")
	SingleEnumThree = ExampleMetadataSingleEnum.Iota("Three")

	LockedEnumOne   = ExampleMetadataLockedEnum.Iota("one")
	LockedEnumTwo   = ExampleMetadataLockedEnum.Iota("two")
	LockedEnumThree = ExampleMetadataLockedEnum.Iota("Three")

	MultipleEnumOne   = ExampleMetadataMultipleEnum.Iota("one")
	MultipleEnumTwo   = ExampleMetadataMultipleEnum.Iota("two")
	MultipleEnumThree = ExampleMetadataMultipleEnum.Iota("Three")

	DistinctEnumOne   = ExampleMetadataDistinctEnum.Iota("one")
	DistinctEnumTwo   = ExampleMetadataDistinctEnum.Iota("two")
	DistinctEnumThree = ExampleMetadataDistinctEnum.Iota("Three")
)

